# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:1.7b
OLLAMA_TIMEOUT=120

# System Prompt
SYSTEM_PROMPT=You are a helpful, friendly voice assistant. Keep your responses concise unless the user asks for detailed information. Never use emojis.

# TTS Configuration
TTS_MODEL_PATH=.downloaded_models/kokoro-v1.0.onnx
TTS_VOICES_PATH=.downloaded_models/voices-v1.0.bin
TTS_VOICE=am_santa
TTS_SPEED=1.0

# Conversation Settings
MAX_HISTORY=10

# Logging (set to 1, true, or yes to enable debug logging)
DEBUG=false

# MQTT Configuration
MQTT_PORT=1883
MQTT_WS_PORT=9001
MQTT_MAX_CONNECTIONS=100
MQTT_MAX_QUEUED_MESSAGES=1000

# Qdrant Configuration
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ai_assistant
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=ai_assistant
