# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=qwen3:1.7b
OLLAMA_TIMEOUT=120

# System Prompt
SYSTEM_PROMPT=You are a helpful, friendly voice assistant. Keep your responses concise unless the user asks for detailed information. Never use emojis.

# TTS Configuration
TTS_MODEL_PATH=.downloaded_models/kokoro-v1.0.onnx
TTS_VOICES_PATH=.downloaded_models/voices-v1.0.bin
TTS_VOICE=am_santa
TTS_SPEED=1.0

# Conversation Settings
MAX_HISTORY=10

# Logging (set to 1, true, or yes to enable debug logging)
DEBUG=false

# MQTT Configuration
MQTT_PORT=1883
MQTT_WS_PORT=9001
MQTT_MAX_CONNECTIONS=100
MQTT_MAX_QUEUED_MESSAGES=1000

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ai_assistant
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=ai_assistant
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# Embedding Configuration (for memory system)
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_DIMENSION=768

# Memory System
MEMORY_ENABLED=true

# Compaction Settings (summarizes older messages to save context)
# Trigger compaction when session has this many messages
MEMORY_COMPACTION_THRESHOLD=50
# Keep this many recent messages when compacting
MEMORY_COMPACTION_KEEP_RECENT=10
# Model to use for summarization (leave empty for simple summary)
MEMORY_COMPACTION_MODEL=
